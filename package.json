{
  "name": "@jrson83/node-ts-preset",
  "version": "0.1.0-dev",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.esm.js"
    }
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": ["dist/index.d.ts"]
    }
  },
  "files": ["dist"],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "reinstall": "pnpm run clean:pnpm && pnpm install",
    "list": "pnpm recursive list",
    "list:workspaces": "pnpm m ls --depth -1 --porcelain",
    "clean": "rm -rf dist",
    "clean:pnpm": "node ./scripts/cleanModules.mjs",
    "lint": "rome check --apply-unsafe .",
    "fmt": "rome format . --write",
    "dev": "tsx src/index.ts",
    "build": "ptsup",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "ptsup": "^0.3.1",
    "rome": "^12.0.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "engines": {
    "node": ">=16.14.0",
    "npm": "use `pnpm` instead",
    "pnpm": ">=8.2.0",
    "yarn": "use `pnpm` instead"
  },
  "packageManager": "pnpm@8.2.0"
}
