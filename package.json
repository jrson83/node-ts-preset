{
  "name": "@jrson83/node-ts-preset",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "rm -rf dist",
    "fmt": "rome format . --write",
    "lint": "rome check .",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^18.14.1",
    "rome": "^11.0.0",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  },
  "engines": {
    "node": ">=16.14.0",
    "npm": "use `pnpm` instead",
    "pnpm": ">=7.25.0",
    "yarn": "use `pnpm` instead"
  },
  "packageManager": "pnpm@7.25.0"
}
