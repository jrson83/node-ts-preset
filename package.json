{
  "name": "@jrson83/node-ts-preset",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "reinstall": "pnpm run clean:pnpm && pnpm install",
    "list": "pnpm recursive list",
    "list:workspaces": "pnpm m ls --depth -1 --porcelain",
    "clean": "rm -rf dist",
    "clean:pnpm": "node ./scripts/cleanModules.mjs",
    "fmt": "rome format . --write",
    "lint": "rome check .",
    "build": "ptsup --entry=src/index.ts --clean --external=[] --internal=react"
  },
  "dependencies": {
    "react": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.5",
    "@types/react": "^18.0.28",
    "ptsup": "^0.3.1",
    "rome": "^11.0.0",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=16.14.0",
    "npm": "use `pnpm` instead",
    "pnpm": ">=7.1.0",
    "yarn": "use `pnpm` instead"
  },
  "packageManager": "pnpm@7.1.0"
}
